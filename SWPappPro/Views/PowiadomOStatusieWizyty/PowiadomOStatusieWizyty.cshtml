@model IEnumerable<SWPappPro.Models.WIZYTA_KONSULTACYJNA>
@{
    ViewBag.Title = "PowiadomOStatusieWizyty";
    Layout = "~/Views/Shared/_LekarzLayout.cshtml";
}

<h2>Powiadom o statusie wizyty domowej:</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PACJENT.IMIE)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PACJENT.NAZWISKO)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TERMINARZ.DATA)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LEKARZ.IMIE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PACJENT.IMIE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TERMINARZ.DATA)
            </td>
            <td>
                @Html.ActionLink("Powiadom", "PowiadomOStatusieWizytyFormularz", new { id = item.WIZYTA_KONSULTACYJNA_ID , id_p=item.PACJENT_ID })
            </td>
        </tr>
    }
</table>