@model SWPappPro.Models.PACJENT

@{
    ViewBag.Title = "LoginPacjent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    @using (Html.BeginForm("LoginPacjent", "Home", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        
        <h1>Logowanie</h1>
        <div>

            @if (TempData["ErrorMSG"] != null)
            {
                <label style="color:maroon;"> @TempData["ErrorMSG"] </label>
                <br /><br />
            }
            
            @Html.TextBoxFor(s => s.PESEL, new { @placeholder = "Username" })
            <br /> <br />
            @Html.PasswordFor(s => s.HASLO, new { @placeholder = "Password" })
            <br /> <br />
            <button type="submit">Login</button>
        </div>
    }
</body>
</html>