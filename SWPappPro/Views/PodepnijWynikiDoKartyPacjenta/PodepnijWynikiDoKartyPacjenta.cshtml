@model IEnumerable<SWPappPro.Models.PACJENT>
@{
    ViewBag.Title = "PodepnijWynikiDoKartyPacjenta";
    Layout = "~/Views/Shared/_LekarzLayout.cshtml";
}

<h3>Wybierz pacjenta z poniższej listy:</h3>

<table class="table">
    <tr>
        <th>
            Imię
        </th>
        <th>
            Nazwisko
        </th>
        <th>
            PESEL
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IMIE)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NAZWISKO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PESEL)
            </td>
            <td>
                @Html.ActionLink("Podepnij wyniki", "PodepnijWynikiDoKartyPacjentaFormularz", new { id = item.PACJENT_ID })
            </td>
        </tr>
    }

</table>
